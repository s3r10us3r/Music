<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyMusicList</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%; /* Ensure the body takes up the full height */
        }
        body {
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa; /* Light blueish background */
            color: #000; /* Black text for contrast */
        }
        .navbar {
            background-color: #007bff; /* Bootstrap primary blue */
        }
        .navbar-brand, .nav-link {
            color: #fff !important; /* White text on the navbar */
        }
        .navbar-brand:hover, .nav-link:hover {
            color: #cce5ff !important; /* Lighter blue hover effect */
        }
        main {
            flex: 1; /* Make the main content area grow to fill available space */
        }
        footer {
            color: #000;
            padding: 10px 0;
        }
        footer p {
            margin: 0;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MyMusicList</a>
        </div>
    </nav>
</header>

<main class="container mt-4">
    @RenderBody()
</main>

<footer class="text-center">
    <p>&copy; @DateTime.Now.Year - MyMusicList</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function getAuthHeader() {
        const jwt = localStorage.getItem("jwt");
        let now = new Date();
        if (!jwt || jwt.expiry < now) {
            localStorage.removeItem("jwt");
            return null;
        }
        return {
            "Content-Type": "application/json",
            "Authorization": `Bearer ${jwt.value}`
        };
    }
</script>
</body>
</html>